<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Week2Task" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lime_50</item>
        <item name="colorAccent">@color/cyan_900</item>
        <item name="colorPrimaryDark">@color/cyan_900</item>
        <item name="android:textColorPrimary">@color/lime_200</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Widget.Week2Task.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Week2Task.TextInputLayout.HintText</item>
        <item name="hintTextColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorPrimary</item>
        <item name="boxStrokeColor">?attr/colorPrimaryDark</item>
    </style>
</resources>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Week2Task" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lime_50</item>
        <item name="colorPrimaryDark">@color/lime_600</item>
        <item name="android:textColorPrimary">@color/brown_900</item>
        <item name="colorAccent">@color/lime_200</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Widget.Week2Task.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/Theme.Week2Task</item>
    </style>

    <style name="Widget.Week2Task.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Week2Task.TextInputLayout.HintText
        </item>
        <item name="hintTextColor">?android:attr/textColorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">?android:attr/textColorPrimary</item>
        <item name="boxStrokeColor">?android:attr/colorAccent</item>
    </style>

    <style name="TextAppearance.Week2Task.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Week2Task.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
    </style>
</resources>
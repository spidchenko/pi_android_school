<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashScreenActivity">

    <ImageView
        android:id="@+id/iv_splash_screen_logo"
        android:layout_width="@dimen/splashScreenLogoSize"
        android:layout_height="@dimen/splashScreenLogoSize"
        android:layout_margin="8dp"
        android:contentDescription="@string/description_splash_screen"
        app:layout_constraintBottom_toTopOf="@+id/tv_splash_screen_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_splash_screen" />

    <TextView
        android:id="@+id/tv_splash_screen_text"
        style="@style/splashScreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_splash_screen_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>